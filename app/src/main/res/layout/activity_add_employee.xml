<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEmployeeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:orientation="vertical"
        android:layout_height="0dp">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver Name"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/etEmpName"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver Email"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/etEmpEmail"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver Password"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/etEmpPasword"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver Address"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/etEmpAddress"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Driver PhoneNo"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/etEmpPhoneNo"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Driver"
            android:textSize="18sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_shape"
            android:onClick="AddEmployee1"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>